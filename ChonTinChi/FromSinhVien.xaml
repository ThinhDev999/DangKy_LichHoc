                            <StackPanel Orientation="Horizontal">
                                <Icon:PackIconMaterial Kind="Logout" 
                                                       Margin="10 0 15 0"
                                                       Style="{DynamicResource menuButtonIcon}"/>
                                <TextBlock Text="Logout"/>
                            </StackPanel>
                        </Button>

